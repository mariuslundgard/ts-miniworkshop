{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "noEmitHelpers": false,
    "target": "ES5",
    "outDir": "dist/"
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "files": [
    "./ts/bootstrap.ts",
    "./ts/slideshow.ts",
    "./typings/index.d.ts"
  ],
  "filesGlob": [
    "./ts/*.d.ts",
    "./ts/*.ts",
    "./typings/index.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "www"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
